{% extends "base.j2" %}
{% block title %}
  Home
{% endblock title %}
{% block header %}
  <h2>Home</h2>
{% endblock header %}
{% block content %}
  {% if current_user %}
    <div>
      Your secret is "<strong>{{ current_user.secret }}</strong>". Keep it secret!
    </div>
    <h1>List of Posts</h1>
    <ul>
      {% for post in posts %}
        <li>
            <h2>{{ post.title }}</h2>
            <p><strong>Author:</strong> {{ post.user.username }}</p>
            <p>{{ post.desc }}</p>
        </li>
      {% endfor %}
    </ul>
  {% else %}
    <div>Log in and I will show you your secret!</div>
  {% endif %}
{% endblock content %}
